@import "./detail.skeleton.wxss";
.card {
  margin: 24rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  border-radius: 15rpx;
  background-color: #fff;
}

.swiper {
  transition: 200ms ease-out;
  width: 100%;
  display: flex;
  border-radius: 15rpx;
  overflow: hidden;
}

.play {
  width: 40rpx;
  height: 40rpx;
}

.swiper-image {
  width: 100%;
  padding: 0rpx 0rpx 0rpx 0rpx;
  display: flex;
  border-radius: 15rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  flex-direction: row;
}

.price-box {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  font-weight: 400;
  flex-direction: row;
}

.price-icon {
  font-size: 22rpx;
}

.price {
  font-weight: 600;
  font-size: 28rpx;
  color: #f80202;
  margin: 0 0 0 8rpx;
}

.price-raw {
  font-size: 22rpx;
  color: #666666;
  margin: 0 0 0 auto;
  text-decoration: line-through;
}

.user-box {
  width: 100%;
  height: 148rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.des-box {
  height: 100%;
  width: 380rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-evenly;
  padding: 10rpx 20rpx;
}

.user-sex {
  margin-right: 50rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.user-nickname {
  font-weight: 600;
  letter-spacing: 3rpx;
  font-size: 30rpx;
}

.local-box {
  display: flex;
  align-items: center;
}

.local-box image {
  width: 30rpx;
  height: 30rpx;
}

.local-box view {
  padding-left: 5rpx;
  font-size: 28rpx;
  color: rgb(150, 150, 150);
}

.notes_box {
  width: 100%;
  display: flex;
  box-sizing: border-box;
  padding-top: 24rpx;
}

.notes {
  width: 100%;
  background: rgb(238, 238, 238);
  color: #000;
  padding: 20rpx 20rpx 10rpx 20rpx;
  border-radius: 12rpx;
  display: flex;
  box-sizing: border-box;
  flex-direction: column;
}

.notes_text {
  font-size: 28rpx;
  line-height: 45rpx;
  padding-bottom: 10rpx;
}

.safe-area-bottom {
  height: calc(env(safe-area-inset-bottom) + 120rpx);
}

.comment-card {
  padding-left: 12rpx;
  padding-right: 12rpx;
  padding-top: 20rpx;
}

.comment-contain {
  display: flex;
  flex-direction: row;
  padding-right: 20rpx;
}

.comment-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-left: 20rpx;
}

.comment-avatar {
  display: flex;
  align-items: center;
  flex-direction: column;
  flex: 1;
}

.comment-avatar image {
  margin: 15rpx 0 0 0;
  width: 70rpx;
  height: 70rpx;
  border-radius: 35rpx;
}

.comment-info {
  display: block;
  flex: 5;
}

.comment-nickname {
  font-weight: 600;
  letter-spacing: 3rpx;
  font-size: 30rpx;
  align-items: center;
  display: flex;
}

.comment-value {
  font-size: 32rpx;
}

.comment-border {
  height: 10rpx;
}

.comment-time {
  flex: 7;
  font-size: 26rpx;
  color: #666666;
}

.border1 {
  border-bottom: 1px solid #eeeeee;
  margin: 20rpx 0;
}

.border2 {
  border-bottom: 1px solid #eeeeee;
  margin: 20rpx 0 20rpx 100rpx;
}

.center-1-active {
  border-radius: 15rpx;
  background-color: #f1f1f1;
}

.comment-publish {
  letter-spacing: 8rpx;
  font-size: 34rpx;
  font-weight: 600;
}

.comment-publish-active {
  color: #2fa0ff!important;
}

.comment-add {
  display: flex;
  padding: 24rpx;
  align-items: center;
}

.top_img {
  width: 100%;
  display: flex;
  justify-content: center;
}

.top1 {
  flex-direction: raw;
  display: flex;
}


.top_img image {
  width: 300rpx;
  height: 300rpx;
}



.author {
  padding-top: 10rpx;
  font-size: 26rpx;
  color: rgb(172, 171, 171);
}

.blank {
  width: 100%;
  height: 24rpx;
  background: #eee;
}

.center_contain {
  width: 100%;
  height: 80rpx;
  display: flex;
  box-sizing: border-box;
  padding: 0 100rpx;
  justify-content: space-around;
}

.bottom {
  width: 100%;
  display: flex;
  justify-content: flex-end;
  padding: 20rpx 0 0 0;
}

.c3 {
  width: 120rpx;
  height: 50rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  margin-left: 20rpx;
}

.bg-red {
  background: red;
  color: #fff;
}

.center {
  margin: 20rpx 0rpx 0rpx 0rpx;
}

.c_title {
  font-size: 30rpx;
  width: 140rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.title_on {
  font-size: 32rpx;
  font-weight: 600;
  color: #000;
  border-bottom: 4rpx solid #fbbd08;
}





.b_publish {
  height: 80rpx;
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  background: #1f90ff;
  color: #fff;
  border-radius: 15rpx;
  letter-spacing: 4rpx;
  font-size: 32rpx;
  border: none;
  font-weight: 500;
  margin: 0 10rpx;
}

.b_cancel {
  margin: 30rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #bcbcbc;
  color: #fff;
  border-radius: 40rpx;
  letter-spacing: 4rpx;
  font-size: 32rpx;
  border: none;
  font-weight: 500;
}




.time_box {
  width: 100%;
  display: flex;
  padding-top: 24rpx;
  box-sizing: border-box;
  justify-content: space-between;
}

.kind {
  font-size: 28rpx;
}

.time {
  font-size: 28rpx;
  color: #8c9aa8;
}

.deliver_box {
  width: 100%;
  display: flex;
  box-sizing: border-box;
  justify-content: space-between;
  padding-top: 24rpx;
}

.deliver_first {
  display: flex;
  align-items: center;
}

.deliver_title {
  font-size: 28rpx;
}

.title12 {
  display: flex;
  align-items: center;
}

.title12 image {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
}

.title12 view {
  padding-left: 10rpx;
  letter-spacing: 3rpx;
  font-size: 30rpx;
}

.date {
  font-size: 28rpx;
  color: #b2b2b2;
  margin: 0 0 0 auto;
}

.deliver_kind {
  font-size: 28rpx;
  color: #a5a5a5;
}

.deliver_place {
  font-size: 28rpx;
}

.palceInput_box {
  width: 100%;
  padding: 24rpx 0;
  display: flex;
  box-sizing: border-box;
  justify-content: center;
  flex-direction: raw;
}

.palceInput_box input {
  height: 80rpx;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  font-size: 26rpx;
  margin: 0 10rpx 0 10rpx;
  flex: 4;
  padding-left: 10rpx;
}

.detail_contain {
  width: 100%;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.detail_card {
  display: flex;
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 0;
  justify-content: space-between;
}

.detail_border {
  border-bottom: 1rpx solid #eee;
}

.detail_title {
  width: 20%;
  font-size: 28rpx;
  line-height: 45rpx;
}

.detail_content {
  width: 78%;
  font-size: 27rpx;
  line-height: 44rpx;
  color: #616161;
}

/*底部导航*/

.tabbar {
  width: 100%;
  height: 96rpx;
  background: #fff;
  opacity: 1;
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
  display: flex;
  padding: 10rpx;
  border-top: 1rpx solid #eee;
  align-items: center;
  box-sizing: border-box;
  z-index: 8;
  margin-bottom: env(safe-area-inset-bottom);
}

.bg_grey {
  background-color: gray;
}

.bg_blue {
  background: #1f90ff;
}

.t_card {
  position: relative;
  flex: 1;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.t_card image {
  width: 40rpx;
  height: 40rpx;
}

.t_card text {
  display: flex;
  align-items: flex-start;
  justify-content: center;
  height: calc(100% - 50rpx);
  width: 100%;
  font-size: 24rpx;
  text-align: center;
  white-space: nowrap;
  padding-top: 4rpx;
}

.t_button {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  opacity: 0.01;
  z-index: 9;
}

.buy_box {
  flex: 2;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.hide {
  display: none;
}

.show {
  display: flex;
}

.buy {
  width: 90%;
  height: 70rpx;
  color: #fff;
  font-size: 28rpx;
  border-radius: 35rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.contact_box {
  z-index: 9;
  position: fixed;
  bottom: 200rpx;
  right: 40rpx;
  display: flex;
  width: 100rpx;
  flex-direction: column;
  align-items: center;
  background: rgba(255, 255, 255, 0.8);
  padding: 20rpx 0;
  border-radius: 50rpx 50rpx 20rpx 20rpx;
  box-shadow: 0 0 20rpx #f0f0f0 !important;
}

.contact_box image {
  width: 80rpx;
  height: 80rpx;
}

.contact_box view {
  font-size: 26rpx;
  margin-top: 10rpx;
}

.publish-textarea {
  min-height: 150rpx;
  width: 100%;
  flex: 4;
}

.publish-box {
  flex: 1;
  display: flex;
  justify-content: center;
  min-height: 150rpx;
  color: #1f90ff;
  align-items: center;
}