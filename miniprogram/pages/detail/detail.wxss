.top_contain {
  display: flex;
  flex-direction: column;
  padding: 0px;
  box-sizing: border-box;
}

.top_img {
  width: 100%;
  display: flex;
  justify-content: center;
}

.banner {
  width: 100%;
  display: flex;
  height: 750rpx;
}

.banner_image {
  width: 100%;
  padding: 0rpx 0rpx 0rpx 0rpx;
  display: flex;
}

.top_img image {
  width: 300rpx;
  height: 300rpx;
}

.title {
  padding-top: 30rpx;
  font-size: 32rpx;
  font-weight: 600;
  
  flex-direction: row;
}

.author {
  padding-top: 10rpx;
  font-size: 26rpx;
  color: rgb(172, 171, 171);
  
}

.price_box {
  margin-top: 20rpx;
  display: flex;
  align-items: flex-end;
  font-weight: 400;
  flex-direction: row;
}

.now_price {
  font-size: 34rpx;
  color: rgb(255, 1, 1);
}

.pre_price {
  padding-left: 30rpx;
  font-size: 28rpx;
  color: rgb(172, 171, 171);
  text-decoration: line-through;
  margin: 0px 0px 0px auto;
}

.blank {
  width: 100%;
  height: 24rpx;
  background: #eee;
}

.center_contain {
  width: 100%;
  height: 80rpx;
  display: flex;
  box-sizing: border-box;
  padding: 0 100rpx;
  justify-content: space-around;
}

.c_title {
  font-size: 30rpx;
  width: 140rpx;
  height: 100%;
  display: flex;
  
  align-items: center;
  justify-content: center;
}

.title_on {
  font-size: 32rpx;
  font-weight: 600;
  color: #000;
  border-bottom: 4rpx solid #fbbd08;
}

.user_box {
  width: 100%;
  height: 148rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.user_box image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.des_box {
  height: 100%;
  width: 380rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-around;
  padding: 10rpx 20rpx;
}

.user_name {
  font-size: 32rpx;
  
}

.local_box {
  display: flex;
  align-items: center;
}

.local_box image {
  width: 30rpx;
  height: 30rpx;
}

.local_box view {
  padding-left: 5rpx;
  font-size: 28rpx;
  
  color: rgb(150, 150, 150);
}

.sex {
  width: 100rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.sex image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.notes_box {
  width: 100%;
  display: flex;
  box-sizing: border-box;
  padding-top: 24rpx;
}

.notes {
  width: 100%;
  background: rgb(238, 238, 238);
  color: #000;
  padding: 20rpx 20rpx 10rpx 20rpx;
  border-radius: 12rpx;
  display: flex;
  box-sizing: border-box;
  flex-direction: column;
}

.notes_text {
  font-size: 28rpx;
  line-height: 45rpx;
  padding-bottom: 10rpx;
}

.time_box {
  width: 100%;
  display: flex;
  padding-top: 24rpx;
  box-sizing: border-box;
  justify-content: space-between;
}

.kind {
  font-size: 28rpx;
  
}

.time {
  font-size: 28rpx;
  
  color: #8c9aa8;
}

.deliver_box {
  width: 100%;
  display: flex;
  box-sizing: border-box;
  justify-content: space-between;
  padding-top: 24rpx;
}

.deliver_first {
  display: flex;
  align-items: center;
}

.deliver_title {
  font-size: 28rpx;
  
}

.deliver_kind {
  font-size: 28rpx;
  
  color: #a5a5a5;
}

.deliver_place {
  font-size: 28rpx;
  
}

.palceInput_box {
  width: 100%;
  padding: 24rpx 24rpx 0 24rpx;
  display: flex;
  box-sizing: border-box;
  justify-content: center;
}

.palceInput_box input {
  width: 100%;
  height: 66rpx;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  font-size: 26rpx;
  padding: 0 20rpx;
  
}

.detail_contain {
  width: 100%;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.detail_card {
  display: flex;
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 0;
  justify-content: space-between;
}

.detail_border {
  border-bottom: 1rpx solid #eee;
}

.detail_title {
  width: 20%;
  font-size: 28rpx;
  
  line-height: 45rpx;
}

.detail_content {
  width: 78%;
  font-size: 27rpx;
  
  line-height: 44rpx;
  color: #616161;
}

/*底部导航*/

.tabbar {
  width: 100%;
  height: 96rpx;
  background: #fff;
  opacity: 1;
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
  display: flex;
  padding: 10rpx;
  border-top: 1rpx solid #eee;
  align-items: center;
  box-sizing: border-box;
  z-index: 8;
  margin-bottom: env(safe-area-inset-bottom);
}

.t_card {
  position: relative;
  flex: 1;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.t_card image {
  width: 40rpx;
  height: 40rpx;
}

.t_card text {
  display: flex;
  align-items: flex-start;
  justify-content: center;
  height: calc(100% - 50rpx);
  width: 100%;
  font-size: 24rpx;
  text-align: center;
  white-space: nowrap;
  padding-top: 4rpx;
}

.t_button {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  opacity: 0.01;
  z-index: 9;
}

.buy_box {
  flex: 2;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.hide {
  display: none;
}

.show {
  display: flex;
}

.buy {
  width: 90%;
  height: 70rpx;
  background: #1f90ff;
  color: #fff;
  letter-spacing: 4rpx;
  font-size: 28rpx;
  border-radius: 35rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.contact_box {
  z-index: 9;
  position: fixed;
  bottom: 200rpx;
  right: 40rpx;
  display: flex;
  width: 100rpx;
  flex-direction: column;
  align-items: center;
  background: rgba(255, 255, 255, 0.8);
  padding: 20rpx 0;
  border-radius: 50rpx 50rpx 20rpx 20rpx;
  box-shadow: 0 0 20rpx #f0f0f0 !important;
}

.contact_box image {
  width: 80rpx;
  height: 80rpx;
}

.contact_box view {
  font-size: 26rpx;
  
  margin-top: 10rpx;
}

.contain {
  width: 100%;
  padding: 24rpx;
  display: flex;
  box-sizing: border-box;
  flex-direction: column;
  padding-bottom: 0rpx;
}
.contain1 {
  width: 100%;
  padding: 24rpx;
  display: flex;
  box-sizing: border-box;
  flex-direction: column;
  padding-bottom: calc(env(safe-area-inset-bottom) + 120rpx);
}

.card {
  width: 100%;
  padding: 30rpx;
  display: flex;
  box-sizing: border-box;
  border-radius: 15rpx;
  flex-direction: column;
  background-color: #fff;
}
