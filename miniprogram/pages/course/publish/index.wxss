.card {
  margin: 24rpx;
  padding: 30rpx;
  display: flex;
  box-sizing: border-box;
  border-radius: 15rpx;
  flex-direction: column;
  background-color: #fff;
}

.name{
  font-weight: 600;
}

.b_card {
  margin: 24rpx;
  padding: 40rpx 30rpx;
  display: flex;
  border-radius: 18rpx;
  box-shadow: 0 0 20rpx #ebebeb;
  flex-direction: column;
  background: #fff;
  box-sizing: border-box;
}

.b_contain {
  padding: 32rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  background: #fff;
  box-shadow: 0 30rpx 20rpx rgb(240, 240, 240);
}

.b_top {
  display: flex;
}

.b_author {
  font-size: 28rpx;
  color: #000;
}

.b_ccontain {
  width: 100%;
  padding: 32rpx;
  display: flex;
  box-sizing: border-box;
  flex-direction: column;
}

.b_border {
  border-bottom: 1rpx solid #eee;
  width: 100%;
  height: 2rpx;
}

.b_bar {
  height: 90rpx;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.b_notes {
  width: 100%;
  padding: 10rpx;
  display: flex;
  box-sizing: border-box;
}

.b_text {
  width: 100%;
  height: 400rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  background: rgb(238, 238, 238);
}

.b_text textarea {
  width: 100%;
  height: 330rpx;
  font-size: 28rpx;
  color: #8c9aa8;
  border-spacing: 2rpx;
}

.b_less {
  display: flex;
  justify-content: flex-end;
  font-size: 28rpx;
  color: #8c9aa8;
}

.b_nobi {
  font-size: 28rpx;
  color: #8c9aa8;
}

.b_publish {
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #1f90ff;
  color: #fff;
  border-radius: 40rpx;
  letter-spacing: 4rpx;
  font-size: 32rpx;
  border: none;
  font-weight: 500;
}

.c_contain {
  height: calc(100vh);
  position: relative;
  width: 100%;
  background: #fff;
  display: flex;
  align-items: center;
  flex-direction: column;
  box-sizing: border-box;
}

.c_success {
  width: 145rpx;
  height: 184rpx;
  margin-top: 220rpx;
}

.c_title {
  font-size: 40rpx;
  font-weight: 600;
  margin: 30rpx;
}

.c_des {
  margin-top: 30rpx;
  font-size: 28rpx;
  line-height: 45rpx;
  color: #898989;
}

.c_see {
  margin-top: 40rpx;
  font-size: 32rpx;
  letter-spacing: 3rpx;
  color: #4f93ea;
}

.c_again {
  margin-top: 40rpx;
  width: 500rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: #1f90ff;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  letter-spacing: 4rpx;
}

.b_publish-active{
background-color: #0F80EF;
}

.value-class {
  flex: none !important;
}