.top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 60rpx;
  padding: 10rpx 30rpx;

}

.title {
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
  width: calc(100% - 60rpx);
  line-height: 50rpx;
}


.des_contain {
  width: 618rpx;
  height: 157rpx;
  border-radius: 10rpx;
  background: #fff;
  display: flex;
  box-sizing: border-box;
  flex-direction: column;
  justify-content: center;
  padding: 0 0 0 90rpx;
}

.name {
  font-size: 36rpx;
  line-height: 50rpx;
}

.sign {
  margin-top: 10rpx;
  font-size: 28rpx;
  letter-spacing: 3rpx;
  line-height: 45rpx;
  color: #b8b8b8;
}

.avator_box {
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  display: flex;
  padding: 44rpx 0 0 40rpx;
}

.avator {
  box-shadow: 0 0 10rpx #b8b8b8;
  width: 110rpx;
  height: 110rpx;
  border-radius: 20rpx;
}

.contain {
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 0 20rpx;
  box-sizing: border-box;
  padding-bottom: 20rpx;
}

.description {
  width: 100%;
  padding: 24rpx 30rpx;
  background: #fff;
  border-radius: 15rpx;
  display: flex;
  box-sizing: border-box;
  flex-direction: column;

}

.description text {
  width: 100%;
  font-size: 28rpx;
  line-height: 44rpx;
  letter-spacing: 3rpx;
}

.tip {
  display: flex;
  align-items: center;
}

.tip view {
  font-size: 30rpx;
  letter-spacing: 2rpx;
  padding: 15rpx 0;
  width: 150rpx;
  display: flex;
  justify-content: space-between;
}

.tip text {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #008ecf;
  text-decoration-line: underline;
}

.top_contain {
  width: 100%;
  display: flex;
  box-sizing: border-box;
  justify-content: flex-end;
  flex-direction: column;
}

.logo-contain {
  width: 100%;
  height: 300rpx;
  display: flex;
  align-items: center;
}

.logo-contain image {
  width: 200rpx;
  height: 200rpx;
  margin: auto;
}

.prog-name {
  text-align: center;
  font-size: 50rpx;
}

.prog-ver {
  text-align: center;
  margin: 10rpx;
}

.prog-developer {
  text-align: center;
}


.back-1 {
  transition: ease-out 200ms;
  background-color: #f4f4f4;
}

.back-2 {
  transition: ease-out 200ms;
  background-color: #fff;
}

.text-1 {
  transition: ease-out 200ms;
  color: #000;
}

.text-2 {
  transition: ease-out 200ms;
  color: #888;
}

.shadow {
  transition: ease-out 200ms;
  box-shadow: 0 0 18rpx rgb(236, 236, 236);
}
